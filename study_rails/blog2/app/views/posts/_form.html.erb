<%= form_for @post do |f| %>

    <% if @post.errors.any? %>

            <!-- <h2><%= pluralize(@post.errors.count, "error") %>
                prohibited this article from being saved:</h2> -->
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>

    <% end %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :content %>
        <%= f.text_area :content %>
    </p>

    <%= f.submit %>

<% end %>
